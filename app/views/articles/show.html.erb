<article id="article">
  <div class="title">
    <h1><%= link_to_unless_current @article.title, @article %></h1>
  </div>

  <div class="intro">
    <%= @article.intro %>
  </div>

  <div class="extended">
    <%= @article.extended %>
  </div>

  <div class="meta">
    by <%= link_to @article.author.name, @article.author %>
  </div>
</article>


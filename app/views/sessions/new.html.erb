<div id="login">
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email, t('login.form.email.label', default: 'Email') %><br>
      <%= text_field_tag :email, params[:email], placeholder: 'john.doe@mail.com' %>
    </div>

    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password, params[:password], placeholder: '********' %>
    </div>

    <div class="button">
      <%= submit_tag 'Login' %>
    </div>
  <% end %>
</div>

